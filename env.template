# Multi-Agent Chat Environment Configuration Template
# Copy this file to .env and fill in your values

# ========================================
# Docker Images
# ========================================
MULTIAGENT_CHAT_SERVER_IMAGE=multiagent-chat-server:latest
MULTIAGENT_CHAT_CLIENT_IMAGE=multiagent-chat-client:latest

# ========================================
# LLM Configuration
# ========================================
# OpenAI-compatible LLM endpoint (LM Studio, Ollama, or cloud)
# Do not include /v1 in the base URL
LLM_BASE_URL=http://localhost:1234
LLM_API_KEY=

# Model selection
GENERAL_MODEL=llama-3-8b-instruct
MED_MODEL=medgemma-2
LLM_TEMPERATURE=0.2

# ========================================
# Orchestrator Configuration
# ========================================
# Provider options: openai, gemini
ORCHESTRATOR_PROVIDER=openai
ORCHESTRATOR_MODEL=llama-3-8b-instruct

# Required if ORCHESTRATOR_PROVIDER=gemini
GEMINI_API_KEY=

# ========================================
# A2A Configuration
# ========================================
# Enable A2A mode (true/false)
ENABLE_A2A=true

# Enable native A2A services (true/false)
# If false, uses in-process simulation
ENABLE_A2A_NATIVE=false

# Timeout for chat requests (seconds)
CHAT_TIMEOUT_SECONDS=90

# ========================================
# A2A Service URLs (for native mode)
# ========================================
# Only required if ENABLE_A2A_NATIVE=true
A2A_ROUTER_URL=http://localhost:9100
A2A_MEDGEMMA_URL=http://localhost:9101
A2A_CLINICAL_URL=http://localhost:9102

# ========================================
# OpenMRS FHIR Configuration
# ========================================
# Leave empty to disable FHIR integration
OPENMRS_FHIR_BASE_URL=http://openmrs:8080/openmrs/ws/fhir2/R4/
OPENMRS_USERNAME=admin
OPENMRS_PASSWORD=Admin123

# ========================================
# Spark Thrift Configuration
# ========================================
# For SQL-on-FHIR queries (Parquet files)
# Leave empty to disable Spark integration
SPARK_THRIFT_HOST=
SPARK_THRIFT_PORT=10000
SPARK_THRIFT_DATABASE=default
SPARK_THRIFT_USER=
SPARK_THRIFT_PASSWORD=

# ========================================
# Local FHIR Data
# ========================================
# Directory containing FHIR Parquet files
# Leave empty to disable local data queries
FHIR_PARQUET_DIR=

# ========================================
# Client Configuration
# ========================================
# Override API base URL for client (optional)
# Default uses internal Docker networking
API_BASE_URL=http://multiagent-chat-server:3000
